<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/avatarLvItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/avatar"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/summaryLvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatarLvItem"
        android:text="Crash when login" />

    <TextView
        android:id="@+id/assignToLvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summaryLvItem"
        android:layout_toRightOf="@id/avatarLvItem"
        android:text="Assign to: dinhduc0605" />

    <TextView
        android:id="@+id/dateLvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/assignToLvItem"
        android:text="20/11/2015" />
</RelativeLayout>